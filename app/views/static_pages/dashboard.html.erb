<%= render 'layouts/header' %>
<div class='center'>
  <h3>
    <b> HappyFox at a glance: </b>
  </h3>
</div>
<div class='w3-container'>
  <h4>
    Count each status:
  </h4>
    <table>
      <% show(@tickets, "Open", "New", "Closed", "On Hold", "Unanswered", "Customer Review").each do |show_status , show_count| %>
      <tr>
        <td><%= show_status %></td>
        <td><%= show_count %></td>
      </tr>
      <% end %>
    </table>
</div>

<div class='w3-container'>
  <h4>
    Unresponded Tickets:
  </h4>
  <table>
    <tr>
      <%= count_unresponded(@tickets) %>
    </tr>
  </table>
</div>


<div class='w3-container'>
  <h4>
    Ticket Count by Client:
  </h4>
  <table>
    <% user_count(@tickets).each do |user_name , user_total| %>
    <tr>
      <td><%= user_name %></td>
      <td><%= user_total %></td>
    </tr>
    <% end %>
  </table>
</div>
